<UserControl x:Class="CMSXtream.Pages.ReportFile"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" >
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/IconLibrary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <GroupBox x:Name="grpNextMonthPayment"  >
            <GroupBox.Header>
                <mui:ModernButton x:Name="btnRefresh" IconData="{Binding Data, Source={StaticResource ImgRefresh}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="Refresh Grid" Click="btnRefresh_Click" />
            </GroupBox.Header>
            <DataGrid Name="grdReports" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0"  >
                <DataGrid.Columns  >
                    <DataGridTextColumn Header="REPORT_FILE_NAME" Binding="{Binding Path=REPORT_FILE_NAME}" Visibility="Hidden" />
                    <DataGridTextColumn Header="Report" Binding="{Binding Path=REPORT_NAME}" IsReadOnly="True"  Width="350"  />
                    <DataGridTemplateColumn  Header="Veiw"  Width="50"  >
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <mui:ModernButton x:Name="btnViewReport" IconData="{Binding Data, Source={StaticResource ImgVeiwReport}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="View Report" Click="btnViewReport_Click" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>
    </Grid>
</UserControl>