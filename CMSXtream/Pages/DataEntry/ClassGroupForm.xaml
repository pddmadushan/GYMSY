<UserControl x:Class="CMSXtream.Pages.DataEntry.ClassGroupForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  >
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <GroupBox x:Name="grpBoxStudent" Header="Group Information" >
            
            <Grid HorizontalAlignment="Left" Margin="0,10,0,0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="50" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="70" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
            
                <Label Content="Description:" Grid.Row="0" Grid.Column="0"  FontWeight="Bold"/>
                <TextBox  x:Name="txtClassName"  Grid.Row="0" Grid.Column="1" Margin="0,0,0,4"  MaxLength="250" TextWrapping="Wrap" AcceptsReturn="True" MaxWidth="500" >
                 <!--   <TextBox.Text>
                        <MultiBinding StringFormat="{}{0} {1} - {2}">                           
                            <Binding Path="Text" ElementName="cmbday" Mode="OneWay" UpdateSourceTrigger="PropertyChanged"/>
                            <Binding Path="Text" ElementName="cmbClassTime" Mode="OneWay" UpdateSourceTrigger="PropertyChanged"/>
                            <Binding Path="Text" ElementName="dtpStartDate" Mode="OneWay" UpdateSourceTrigger="PropertyChanged"/>
                        </MultiBinding>
                    </TextBox.Text>-->
                </TextBox>

                <Label  Content="Group ID:" Grid.Row="0" Grid.Column="2" Margin="10,0,6,4"  FontWeight="Bold"/>
                <Label   x:Name="lblClassId"  Content="[New Class]" Grid.Row="0" Grid.Column="3"/>
                
                <Label Content="Comment:" Grid.Row="1" Grid.Column="0"/>
                <TextBox  x:Name="txtComment"  Grid.Row="1" Grid.Column="1" Margin="0,0,0,4"  MaxLength="250" TextWrapping="Wrap" AcceptsReturn="True" MaxWidth="500" />

                <Label Content="Active:" Grid.Row="2" Grid.Column="0"/>
                <CheckBox  x:Name="chkActive" Grid.Row="2" Grid.Column="1" Margin="0,0,0,4" IsChecked="True"/>
                <Label Content="Fee:" Grid.Row="1" Grid.Column="2" Margin="10,0,6,4" FontWeight="Bold"/>
                <TextBox  x:Name="txtClsFee" Grid.Row="1" Grid.Column="3" Margin="0,0,0,20" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" Text="0"  MaxLength="6"  >
                </TextBox>
                <Grid Name="grdClassInfo" HorizontalAlignment="Left" Margin="0,10,0,0"  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan ="4" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                        <RowDefinition Height="30" />
                    </Grid.RowDefinitions>
                    <Label Content="Class Category:" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                    <ComboBox x:Name="cmbClsCatogory" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" ItemsSource="{Binding Path=ClassGroups}" DisplayMemberPath="CLS_NAME" SelectedValuePath="CLS_ID" />
                    <!--<Label Content="Class Fee:" Grid.Row="1" Grid.Column="2" Margin="10,0,6,4" FontWeight="Bold"/>
                    <TextBox  x:Name="txtClsFee" Grid.Row="1" Grid.Column="3" Margin="0,0,0,4" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" Text="0"  MaxLength="6"  >
                    </TextBox>-->

                    <Label Content="Start Date:" Grid.Row="0" Grid.Column="2"  FontWeight="Bold" Margin="10,0,6,4"/>
                    <DatePicker  x:Name="dtpStartDate" Grid.Row="0" Grid.Column="3" Margin="0,0,0,4" SelectedDateChanged="dtpStartDate_SelectedDateChanged"  >
                        <DatePicker.Resources>
                            <Style TargetType="DatePickerTextBox">
                                <Setter Property="IsReadOnly" Value="True"/>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <Label  Content="Day:" Grid.Row="1" Grid.Column="0"  FontWeight="Bold"/>
                    <ComboBox x:Name="cmbday" Grid.Row="1" Grid.Column="1" Margin="0,0,0,4" >
                    </ComboBox>

                    <Label Content="Class Admission:" Grid.Row="2" Grid.Column="2" Margin="10,0,6,4" FontWeight="Bold" Visibility="Hidden"/>
                    <TextBox  x:Name="txtClsAdmission" Grid.Row="2" Grid.Column="3" Margin="0,0,0,4" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" Text="0" Visibility="Hidden">
                    </TextBox>

                    <Label Content="StartTime:" Grid.Row="2" Grid.Column="0"  FontWeight="Bold"/>
                    <ComboBox x:Name="cmbClassTime" Grid.Row="2" Grid.Column="1" Margin="0,0,0,4" >
                    </ComboBox>

                    <Label Content="Class Duration:" Grid.Row="2" Grid.Column="2" Margin="10,0,6,4"  FontWeight="Bold"/>
                    <ComboBox x:Name="cmbClassDuration" Grid.Row="2" Grid.Column="3" Margin="0,0,0,4"  >
                    </ComboBox>

                    <Label Content="Number of Weeks:" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
                    <TextBox  x:Name="txtWeekNumber" Grid.Row="3" Grid.Column="1" Margin="0,0,0,4" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" MaxLength="4" >
                    </TextBox>


                </Grid>

                <Button x:Name="btnSave"  Grid.Row="5" Grid.Column="3"  ToolTip="Save Record" Click="btnSave_Click"  Width="60" Height="60" Padding="0,0" BorderThickness="1"  Margin="0,0,70,0" >
                    <Image Name="imgSave" Source ="pack://application:,,,/Image/ImgBtnSave.png" Width="60" Height="60" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   >
                    </Image>

                </Button>
                <Button x:Name="btnDelete"  Grid.Row="5" Grid.Column="3" ToolTip="Delete Record"   Width="60" Height="60" Padding="0,0" BorderThickness="1" Margin="70,0,0,0" Click="btnDelete_Click"  >
                    <Image Name="imgDelete" Source ="pack://application:,,,/Image/ImgBtnDelete.png" Width="60" Height="60" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   >
                    </Image>

                </Button>
                <CheckBox Name="rdbtnClass" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Left" Margin="0,5,0,0" VerticalAlignment="Top"  Content="Define a Group as a Class" Checked="rdbtnClass_Checked" Unchecked="rdbtnClass_Unchecked" Visibility="Hidden" />

                <GroupBox x:Name="grpStudentTransfer" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4"  Header="Transfer Continues Absent Students" Visibility="Hidden" >

                    <Grid HorizontalAlignment="Left" Margin="0,10,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400" />
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="35" />
                        </Grid.RowDefinitions>
                        <ComboBox x:Name="cmbClsGroup"  Grid.ColumnSpan="2" />
                        <Button x:Name="btnTransfer"  Grid.Row="0"  Grid.Column="4"  Grid.RowSpan="2"  ToolTip="Transfer Students" Width="65" Height="65" Padding="0,0" BorderThickness="1" Click="btnTransfer_Click"  >
                            <Image Name="imgTransfer" Source ="pack://application:,,,/Image/transfer.png" Width="60" Height="60" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   >
                            </Image>

                        </Button>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>

    </Grid>
</UserControl>
