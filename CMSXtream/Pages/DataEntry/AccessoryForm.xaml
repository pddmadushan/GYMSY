<UserControl x:Class="CMSXtream.Pages.DataEntry.AccessoryForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" >
    <GroupBox x:Name="grpBoxAccessory"  Grid.Row="1" Grid.Column="0" Header="Accessory Information" >
        <Grid HorizontalAlignment="Left" Margin="0,10,0,0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="250"/>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition MinWidth="250"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label  Content="Description:" Grid.Row="0" Grid.Column="0" Width="100"/>
            <TextBox x:Name="txtName" Grid.Row="0" Grid.Column="1" Margin="0,0,0,4" MaxLength="250" MaxWidth="500"  />

            <Label  Content="Accessory ID:" Grid.Row="0" Grid.Column="2" Margin="10,0,6,4"  FontWeight="Bold"/>
            <Label   x:Name="lblAccessoryId"  Content="[New Accessory]" Grid.Row="0" Grid.Column="3"/>

            <Label Content="Payble:" Grid.Row="1" Grid.Column="0"/>
            <CheckBox  x:Name="chkPayble" Grid.Row="1" Grid.Column="1" Margin="0,0,0,4" />

            <Label Content="Amount:" Grid.Row="2" Grid.Column="0"/>
            <TextBox  x:Name="txtAccessoryAmount" Grid.Row="2" Grid.Column="1" Margin="0,0,0,4" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" IsEnabled="{Binding ElementName=chkPayble, Path=IsChecked}"  MaxLength="6"  >
                <TextBox.Text>
                    <Binding Path="IsCheckBoxChecked" ElementName="chkPayble" />               
                </TextBox.Text>
            </TextBox>
            
            <Label Content="Comment:" Grid.Row="3" Grid.Column="0"/>
            <TextBox  x:Name="txtComment"  Grid.Row="3" Grid.Column="1" Margin="0,0,0,4"  MaxLength="250" TextWrapping="Wrap" AcceptsReturn="True" MaxWidth="500" />

            <Label Content="Mandatory:" Grid.Row="4" Grid.Column="0"/>
            <CheckBox  x:Name="chkMandatory" Grid.Row="4" Grid.Column="1" Margin="0,0,0,4" />


            <Button x:Name="btnSave"  Grid.Row="6" Grid.Column="3"  ToolTip="Save Record" Click="btnSave_Click"  Width="60" Height="60" Padding="0,0" BorderThickness="1"  Margin="0,0,70,0" >
                <Image Name="imgSave" Source ="pack://application:,,,/Image/ImgBtnSave.png" Width="60" Height="60" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   >
                </Image>
            </Button>
            <Button x:Name="btnDelete"  Grid.Row="6" Grid.Column="3" ToolTip="Delete Record"   Width="60" Height="60" Padding="0,0" BorderThickness="1" Margin="70,0,0,0" Click="btnDelete_Click"  >
                <Image Name="imgDelete" Source ="pack://application:,,,/Image/ImgBtnDelete.png" Width="60" Height="60" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"   >
                </Image>
            </Button>
         
        </Grid>
    </GroupBox>
</UserControl>
