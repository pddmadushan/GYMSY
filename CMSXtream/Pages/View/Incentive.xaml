<UserControl x:Class="CMSXtream.Pages.View.Incentive"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:local="clr-namespace:CMSXtream.Control"  
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1000">
    <UserControl.Resources>
        <Style
        TargetType="{x:Type Line}">
            <Setter Property="Stroke" Value="Black" />
            <Setter Property="StrokeThickness" Value="5.8" />
            <Setter Property="StrokeStartLineCap" Value="Round" />
            <Setter Property="StrokeEndLineCap" Value="Round" />
        </Style>
    </UserControl.Resources>

    <Grid Margin="0,0,0,0" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"  />
            <ColumnDefinition Width="500" />
            <ColumnDefinition Width="500" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition Height="20" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="pgrsBar" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="990" Height="50" Minimum="0" Maximum="100" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2" >
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <Label Grid.Row="1" Grid.Column="1" Content="Select month:" FontSize="20" FontWeight="Bold" Margin="0,0,363,0"   />
        <Label x:Name="lblInfo" Grid.Row="1" Grid.Column="2" Content="" FontSize="15" FontWeight="Bold" Foreground="#FF611306"   />
        <Label x:Name="lblIncentiveAmt" Grid.Row="3" Grid.Column="2" Content="" FontSize="24" FontWeight="Bold"  Foreground="#FF010800"   />
        <DatePicker x:Name="dtpPayMonth" Grid.Row="1" Grid.Column="1" Margin="163,0,55,10" local:DatePickerCalendar.IsMonthYear="True" local:DatePickerDateFormat.DateFormat="MMM-yyyy" Text="MMM-yyyy" SelectedDateChanged="dtpPayMonth_SelectedDateChanged" />
        <Rectangle Grid.Row="5" Grid.Column="2" Margin="0,0,10,0" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FF2EFF00"/>
                    <GradientStop Color="#FF19850A" Offset="0.967"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Rectangle Grid.Row="5" Grid.Column="1" >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1"/>
                    <GradientStop Color="#FFF01F1F"/>
                    <GradientStop Color="#FFAA0E0E" Offset="0.997"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Grid.Row="5" Grid.Column="1" Content="NO" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"   />
        <Label Grid.Row="5" Grid.Column="2" Content="YES" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center"   />
    </Grid>
</UserControl>
