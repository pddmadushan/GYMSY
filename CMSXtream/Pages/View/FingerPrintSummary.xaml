<UserControl x:Class="CMSXtream.Pages.View.FingerPrintSummary"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CMSXtream.Pages.View"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/IconLibrary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label x:Name="lblAttendanceID"/>
        <GroupBox x:Name="grpPFSys" Grid.Column="0" Grid.Row="1">
            <GroupBox.Header>
                <mui:ModernButton x:Name="btnR1" IconData="{Binding Data, Source={StaticResource ImgRefresh}}"  EllipseDiameter="25" EllipseStrokeThickness="1" Content="System Stored FP" Click="btnR1_Click"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="235"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label x:Name="lblSysCardPw" Grid.Row="0" Grid.Column="0" Margin="35,5,0,0"/>
                <DataGrid Grid.Row="1" Grid.Column="0" Name="grdFPSys" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0"  CanUserDeleteRows="False"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Indx" Binding="{Binding Path=FINGER_INDEX}" IsReadOnly="True" Width="40" />
                        <DataGridTextColumn Header="FP Data" Binding="{Binding Path=SFPTMPDATA}" IsReadOnly="True" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnUpdatetoPrimaryMachin"  Grid.Row="3" Grid.Column="1" Content="Update to Prymary Machine " BorderThickness="2" Click="btnUpdatetoPrimaryMachin_Click" />
                <Button x:Name="btnUpdatetoSecondoryMachin"  Grid.Row="5" Grid.Column="1" Content="Update to Second Machine " BorderThickness="2" Click="btnUpdatetoSecondoryMachin_Click" />
            </Grid>
        </GroupBox>
        <GroupBox x:Name="grpPFPrimary" Grid.Column="2" Grid.Row="1">
            <GroupBox.Header>
                <mui:ModernButton x:Name="btnR2" IconData="{Binding Data, Source={StaticResource ImgRefresh}}"  EllipseDiameter="25" EllipseStrokeThickness="1" Content="Primary Machine FP" Click="btnR2_Click"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="235"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label x:Name="lblDvc1CardPw" Grid.Row="0" Grid.Column="0" Margin="35,5,0,0"/>
                <DataGrid Grid.Row="1" Grid.Column="0" Name="grdFPPry" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0"  CanUserDeleteRows="False"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Indx" Binding="{Binding Path=FINGER_INDEX}" IsReadOnly="True" Width="40" />
                        <DataGridTextColumn Header="FP Data" Binding="{Binding Path=SFPTMPDATA}" IsReadOnly="True" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnUpdatetoSystem"  Grid.Row="3" Grid.Column="1" Content="Update to system" BorderThickness="2" Click="btnUpdatetoSystem_Click" />
                <Button x:Name="btnDeleteFPPrymary"  Grid.Row="5" Grid.Column="1" Content="Delete Fringer Print/ Card/ Pw" BorderThickness="2" Click="btnDeleteFPPrymary_Click" />
            </Grid>
        </GroupBox>
        <GroupBox x:Name="grpPFSecndory" Grid.Column="5" Grid.Row="1">
            <GroupBox.Header>
                <mui:ModernButton x:Name="btnR3" IconData="{Binding Data, Source={StaticResource ImgRefresh}}"  EllipseDiameter="25" EllipseStrokeThickness="1" Content="Second Machine FP" Click="btnR3_Click"/>
            </GroupBox.Header>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="235"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="300" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Label x:Name="lblDvc2CardPw" Grid.Row="0" Grid.Column="0" Margin="35,5,0,0"/>
                <DataGrid Grid.Row="1" Grid.Column="0" Name="grdFPSec" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0"  CanUserDeleteRows="False"  >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Indx" Binding="{Binding Path=FINGER_INDEX}" IsReadOnly="True" Width="40" />
                        <DataGridTextColumn Header="FP Data" Binding="{Binding Path=SFPTMPDATA}" IsReadOnly="True" Width="200" />
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnUpdatetoSystemfromSecond"  Grid.Row="3" Grid.Column="1" Content="Update to system" BorderThickness="2" Click="btnUpdatetoSystemfromSecond_Click" />
                <Button x:Name="btnDeleteFPSecondory"  Grid.Row="5" Grid.Column="1" Content="Delete Fringer Print/ Card/ Pw" BorderThickness="2" Click="btnDeleteFPSecondory_Click" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
