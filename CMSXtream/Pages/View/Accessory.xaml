<UserControl x:Class="CMSXtream.Pages.View.Accessory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" >
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/IconLibrary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>
    <GroupBox x:Name="grpBoxStudent"  Grid.Row="2" Grid.Column="0" >
        <GroupBox.Header>
            <mui:ModernButton x:Name="btnAddNew" IconData="{Binding Data, Source={StaticResource ImgAddStudent}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="Add Accessory" Click="btnAddNew_Click"/>
        </GroupBox.Header>
        <Grid Margin="0,5,0,0">
            <DataGrid Name="grdAccessory" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0" EnableRowVirtualization = "True"  CanUserDeleteRows="False"  >
                <DataGrid.Columns  >
                    <DataGridTextColumn Header="ID" Binding="{Binding Path=ACC_ID}" IsReadOnly="True"  />
                    <DataGridTextColumn Header="Description" Binding="{Binding Path=ACC_NAME}" IsReadOnly="True" Width="250" />
                    <DataGridCheckBoxColumn Header="Payble" Binding="{Binding Path=ACC_PAYBLE_FLG}" IsReadOnly="True" Width="60" />                    
                    <DataGridTextColumn Header="Amount" Binding="{Binding Path=ACC_AMOUNT}" IsReadOnly="True" Width="70" />
                    <DataGridTextColumn Header="Comment" Binding="{Binding Path=ACC_COMMENT}" IsReadOnly="True" Width="150"/>
                    <DataGridCheckBoxColumn Header="Mandatory" Binding="{Binding Path=ACC_PAY_MANDATORY}" IsReadOnly="True" Width="70" />
                    <DataGridTemplateColumn Width="50"  >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <mui:ModernButton x:Name="btnEdit" IconData="{Binding Data, Source={StaticResource ImgEdit}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="Edit Record" Click="btnEdit_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>                    
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
