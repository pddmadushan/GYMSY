<UserControl x:Class="CMSXtream.Pages.View.UserAccount"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/IconLibrary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>
    <GroupBox x:Name="grpBoxStudent" >
        <GroupBox.Header>
            <mui:ModernButton Grid.Row="0" Grid.Column="0" x:Name="btnAddNew" IconData="{Binding Data, Source={StaticResource ImgUsers}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="Add User" Margin="5,0,0,0" Click="btnAddNew_Click"/>
        </GroupBox.Header>
        <Grid Margin="0,5,0,0">
            <DataGrid Name="grdUserAccount" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0" EnableRowVirtualization = "True"  CanUserDeleteRows="False" >
                <DataGrid.Columns  >
                    <DataGridTextColumn Header="Class" Binding="{Binding Path=CLS_USER_ID}" IsReadOnly="True"  Width="200"/>
                    <DataGridCheckBoxColumn Header="Active" Binding="{Binding Path=CLS_USER_ACTIVE}" IsReadOnly="True" Width="100" />
                    <DataGridCheckBoxColumn Header="Administrator" Binding="{Binding Path=USER_IS_ADMIN}" IsReadOnly="True" Width="100" />
                    <DataGridTemplateColumn Width="50" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <mui:ModernButton x:Name="btnEdit" IconData="{Binding Data, Source={StaticResource ImgEdit}}"  EllipseDiameter="25" EllipseStrokeThickness="1" ToolTip="Edit User" Click="btnEdit_Click" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </GroupBox>
</UserControl>
