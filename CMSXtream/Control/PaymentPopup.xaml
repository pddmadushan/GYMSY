<UserControl x:Class="CMSXtream.PaymentPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" Height="Auto" Width="Auto" Loaded="UserControl_Loaded" >
    <UserControl.Resources >
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/DataGridStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/StyleResource/IconLibrary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid >
        <DataGrid x:Name="grdPayment" HorizontalAlignment="Left"  VerticalAlignment="Top" AutoGenerateColumns="False"  CanUserAddRows="False" RowHeaderWidth="0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ClassId" Binding="{Binding Path=CLS_ID}" IsReadOnly="True" Visibility="Hidden" CanUserSort="False" />
                <DataGridTextColumn Header="Class" Binding="{Binding Path=CLS_NAME}" IsReadOnly="True" Width="150"  CanUserSort="False"/>
                <DataGridTextColumn Header="Year" Binding="{Binding Path=STM_YEAR}" IsReadOnly="True" Width="50"  CanUserSort="False">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Month Id" Binding="{Binding Path=STM_MONTH}" IsReadOnly="True" Visibility="Hidden"  CanUserSort="False"/>
                <DataGridTextColumn Header="Month" Binding="{Binding Path=STM_MONTH_NAME}" IsReadOnly="True" Width="100"  CanUserSort="False">
                </DataGridTextColumn>
                <DataGridTextColumn Header="Class Fee" Binding="{Binding Path=CLASS_FEE}" IsReadOnly="True" Width="100"   CanUserSort="False">                   
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Pay Amount" Width="100"  CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox  x:Name="txtPayment" PreviewTextInput="NumberValidationTextBox" TextAlignment="Right" Text="{Binding Path=PAID_AMOUNT}" IsEnabled="False">
                            </TextBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Payment Date" Binding="{Binding Path=STD_REC_DATE ,StringFormat = {}{0:dd/MM/yyyy}}" IsReadOnly="True" Width="100"  CanUserSort="False">

                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Card" Width="40"  CanUserSort="False" >
                    <DataGridTemplateColumn.CellTemplate  >
                        <DataTemplate>
                            <CheckBox Name="chkMark" IsChecked="{Binding Path=CARD_ISSUED_FLG}" ></CheckBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn   Width="30"  CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <mui:ModernButton x:Name="btnPayment"  IconData="{Binding Data, Source={StaticResource ImgSave}}"  EllipseDiameter="20" EllipseStrokeThickness="0" Click="btnPayment_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</UserControl>
